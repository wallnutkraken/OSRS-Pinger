<Window x:Class="OsrsPinger.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OsrsPinger"
        mc:Ignorable="d"
        Title="OSRSPinger" Height="600" Width="250" MinHeight="600" MinWidth="250">
    <Grid Name="MainGrid" Margin="0,0,0,0">
        <DataGrid Name="PingGrid"
                  HorizontalAlignment="Left"
                  Margin="10,10,10,10"
                  VerticalAlignment="Top"
                  MaxHeight="480"
                  IsReadOnly="true"
                  CanUserResizeRows="False"
                  CanUserResizeColumns="False"
                  SelectionUnit="Cell"
                  RowHeaderWidth="0"/>
   

        <Button Name="RefreshBtn"
                Content="Refresh"
                HorizontalAlignment="Right"
                Margin="0,470,10,0"
                VerticalAlignment="Top" Width="75"
                Click="RefreshBtn_OnClick_" />

        <TextBlock Name="LowestTblk"
                   HorizontalAlignment="Left"
                   Margin="10,495,0,0"
                   TextWrapping="Wrap"
                   Text="TextBlock"
                   VerticalAlignment="Top" Width="222" Height="64" />
    </Grid>
</Window>